@SEGMENT.OPEN,
@SEGMENT.ACTIVE,
@SEGMENT.PHYSICAL,
@SEGMENT.VALUE,
@SEGMENT.SUBSCRIPTS,
@SEGMENT.ELEMENTS,
@SEGMENT.CLOSE

