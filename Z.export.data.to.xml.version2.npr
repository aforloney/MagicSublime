@EOL,
DO{@Next.get(NPR.SEG.sort.element,NPR.SEG.ele.name) @ELEMENT},
@CLOSE("elements"),
@EOL

SEGMENT.CLOSE
@CLOSE("segment"),
@EOL

SUBSCRIPT
@OPEN("subscript",{{"name",@NPR.SEG.sub.element}}),
@CLOSE("subscript",1),
@EOL

